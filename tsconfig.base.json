{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2020"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ipedis/checkbox": ["dist/packages/checkbox"],
      "@ipedis/checkbox/*": ["dist/packages/checkbox/dist/components/*"],
      "@ipedis/checkbox/loader": ["dist/packages/checkbox/loader"],
      "@ipedis/dropdown": ["dist/packages/dropdown"],
      "@ipedis/dropdown/*": ["dist/packages/dropdown/dist/components/*"],
      "@ipedis/dropdown/loader": ["dist/packages/dropdown/loader"],
      "@ipedis/login": ["dist/packages/login"],
      "@ipedis/login/*": ["dist/packages/login/dist/components/*"],
      "@ipedis/login/loader": ["dist/packages/login/loader"],
      "@ipedis/pagination": ["dist/packages/pagination"],
      "@ipedis/pagination/*": ["dist/packages/pagination/dist/components/*"],
      "@ipedis/pagination/loader": ["dist/packages/pagination/loader"],
      "@ipedis/radio": ["dist/packages/radio"],
      "@ipedis/radio/*": ["dist/packages/radio/dist/components/*"],
      "@ipedis/radio/loader": ["dist/packages/radio/loader"],
      "@ipedis/tab-panel": ["dist/packages/tab-panel"],
      "@ipedis/tab-panel/*": ["dist/packages/tab-panel/dist/components/*"],
      "@ipedis/tab-panel/loader": ["dist/packages/tab-panel/loader"],
      "@ipedis/table": ["dist/packages/table"],
      "@ipedis/table/*": ["dist/packages/table/dist/components/*"],
      "@ipedis/table/loader": ["dist/packages/table/loader"],
      "@ipedis/toggle": ["dist/packages/toggle"],
      "@ipedis/toggle/*": ["dist/packages/toggle/dist/components/*"],
      "@ipedis/toggle/loader": ["dist/packages/toggle/loader"],
      "@ipedis/tooltip": ["dist/packages/tooltip"],
      "@ipedis/tooltip/*": ["dist/packages/tooltip/dist/components/*"],
      "@ipedis/tooltip/loader": ["dist/packages/tooltip/loader"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
